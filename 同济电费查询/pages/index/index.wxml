<view class="page">
    <view class="page__hd">
        <view class="page__title">欢迎使用同济电费查询!</view>
        <view class="page__desc">{{motto}}</view>
    </view>
    <view class="page__bd page__bd_spacing">
        <view class="button-sp-area">
            <button class="weui-btn" type="primary"  bindtap="clk" plain="true">选择房间</button>
       </view>
       <view class="button-text-area">
                <view style="height: 20px;font-size: 20px">{{room}}</view>
       </view>
        <view class="button-sp-area">
            <button class="weui-btn" type="default"  bindtap="search" plain="true">直接查询</button>
        </view>
    </view>
      
       <view class="weui-cells">
         <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_switch">
                <view class="weui-cell__bd">自动查询</view>
                <view class="weui-cell__ft">
                    <switch name="ischeck" checked="{{check}}" bindchange="listenerSwitch"/>
                </view>
            </view>
        </view>
          <view class="weui-cell weui-cell_switch">
          <view class="weui-cell__bd">联系开发者</view>
                <view class="weui-cell__ft">
                    <view class="contact_view">
           <contact-button type="default-light" size="20" session-from="weapp"></contact-button>
           </view>
                </view>
            </view>         
           </view>
        <!--<view class="button-sp-area">
           <button hidden='{{!preview}}' class="weui-btn" type="primary" bindtap="auto"  plain="true">电费充值</button>         
        </view>-->
 
        <view class="weui-footer weui-footer_fixed-bottom">
         <navigator hidden="{{hide}}" url="../index/vote" class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">打赏开发者 </navigator>
            <view class="weui-footer__text">Copyright © 2016-2018 tjservice.cn</view>
        </view>
</view>
